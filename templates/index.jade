    section.getting-started
      h2 Getting started
      p Start by creating a 
        code package.json
        | :

      .highlight.highlight-bash
        pre npm init

      p Install hapi and save it to your 
        code package.json
        |  dependencies:

      .highlight.highlight-bash
        pre npm install hapi --save

      p Create a
        code server.js
        |  file with the following contents:

      .highlight.highlight-javascript
        pre
          span.pl-s1
            span.pl-pds '
            | use strict
            span.pl-pds '
          | ;
          br

          br
          span.pl-s const
          |  Hapi 
          span.pl-k = 
          span.pl-s3 require
          | (
          span.pl-s1
            span.pl-pds '
            | hapi
            span.pl-pds '
          | );
          br

          br
          span.pl-c // Create a server with a host and port
          br

          span.pl-s const
          |  server 
          span.pl-k = 
          span.pl-k new 
          span.pl-en Hapi.Server
          | ();
          br

          | server.connection({ 
          |     host: 
          span.pl-s1
            span.pl-pds '
            | localhost
            span.pl-pds '
          | , 
          |     port: 
          span.pl-c1 8000
          | 
          | });
          br

          br
          span.pl-c // Add the route
          br

          | server.route({
          |     method
          span.pl-k : 
          span.pl-s1
            span.pl-pds '
            | GET
            span.pl-pds '
          | ,
          |     path
          span.pl-k :
          span.pl-s1
            span.pl-pds '
            | /hello
            span.pl-pds '
          | , 
          |     handler
          span.pl-k : 
          span.pl-st function 
          | (
          span.pl-vpf request
          | , 
          span.pl-vpf reply
          | ) {
          br
          br
          span.pl-s         return 
          | reply(
          span.pl-s1
            span.pl-pds '
            | hello world
            span.pl-pds '
          | );
          |     }
          | });
          br

          br
          span.pl-c // Start the server
          br

          | server.start((err) => {
          br
          
          br
          span.pl-s     if 
          | (err) {
          br
          span.pl-s         throw 
          | err;
          |     }
          |     console.log(
          span.pl-s1
            span.pl-pds '
