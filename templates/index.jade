          span.pl-k = 
          span.pl-s3 require
          | (
          span.pl-s1
            span.pl-pds '
            | hapi
            span.pl-pds '
          | );
          br

          br
          span.pl-c // Create a server with a host and port
          br

          span.pl-s const
          |  server 
          span.pl-k = 
          span.pl-en Hapi.server({ 
          br
          |     host: 
          span.pl-s1
            span.pl-pds '
            | localhost
            span.pl-pds '
          | , 
          |     port: 
          span.pl-c1 8000
          | 
          | });
          br

          br
          span.pl-c // Add the route
          br

          | server.route({
          |     method
          span.pl-k : 
          span.pl-s1
            span.pl-pds '
