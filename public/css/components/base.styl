/*--------------------------------------------------------------------
* BASE
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-light $font-base/$line-height-base $font-facit
  color: $gray
  background-color: white
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  position: relative

::-moz-selection
  background-color: $orange-light
  color: white

::selection
  background-color: $orange-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

h1, h2
  line-height: 1.1

h3, h4
  line-height: 1.3

h1, h2, h3
  color: black

h1, h2, h3, h4, h5, h6
  font-weight: $font-light

h4, h5
  color: lighten($gray, 20%)

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4
  font-size: $font-size-h4

h5
  font-size: $font-size-h5

h6
  font-size: $font-size-h6
  text-transform: uppercase

em
  color: lighten($gray, 30%)

p
  margin: 30px 0

a
  cursor: pointer
  color: $orange
  text-decoration: none

  &:hover
    color: $orange-dark
    transition: all .3s ease-in

  &:active, &:hover
    outline: none

abbr, sup
  color: $gray-light

abbr
  border-bottom: 1px dotted $gray-lighter

small
  font-size: $font-small

sup
  font-size: $font-smaller

blockquote
  margin: 0

  small
    color: $gray-light

hr
  display: block
  margin: 60px 35%
  border: none
  border-bottom: 1px solid $gray-lighter

section
  padding: 20px 0 20px 0
  position: relative
  text-align: center

  &:after
    content: ''
    position: absolute
    bottom: 0
    left: 50%
    width: 30%
    margin-left: -15%
    height: 1px
    background-color: $gray-lighter

ul, ol
  margin: 15px 0 15px 20px
  padding: 0

  li ul
    li
      list-style-type: circle

  li li ul
    li
      list-style-type: square

      ul li
        list-stype-type: disc

ul
  li
    margin: 0 0 20px 0
    list-style-type: disc

  /* &.task-list */
  /*   margin: 0 */
  /*  */
  /*   li */
  /*     margin: 0 */
  /*     list-style-type: none */

  &.unstyled
    margin: 0

    li
      display: inline-block
      margin: 0
      list-style-type: none

ol
  li
    list-style-type: decimal

dl
  dt
    font-weight: $font-bold
  dd
    margin: 0
    color: $gray-light

.content
  margin: 0 auto

.pull-left
  float: left

.pull-right
  float: right

@media $desktop

  .content
    width: 80%

    &.single-column, .single-column, .getting-started > .highlight
      width: 60%

  .single-column, .getting-started > .highlight
    margin: 0 auto

  .column
    float: left
    width: 50%

    &:first-of-type
      padding-right: 50px

@media $mobile-devices

  .content
    width: 90%

  .column
    width: 100%

    &:not(:last-of-type)
      margin-bottom: 60px

  h1, h2, h3
    line-height: $line-height-spaced

@media $tablet

  h1
    font-size: $font-size-h1*0.6

  h2
    font-size: $font-size-h2*0.7

@media $smartphone

  h1
    font-size: $font-size-h1*0.5

  h2
    font-size: $font-size-h2*0.7

  h3
    font-size: $font-size-h3*0.7
